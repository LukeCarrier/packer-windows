{
    "builders": [
        {
            "vm_name": "{{user `template`}}",
            "type": "virtualbox-iso",
            "headless": true,
            "format": "ova",
            "guest_os_type": "{{user `guest_os_type`}}",
            "boot_wait": "2m",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "md5",
            "guest_additions_mode": "attach",
            "communicator": "winrm",
            "winrm_username": "vagrant",
            "winrm_password": "vagrant",
            "winrm_timeout": "10h",
            "floppy_files": [
                "../../templates/{{user `template`}}/Autounattend.xml",
                "../../scripts/core/boxstarter.execute.ps1",
                "../../scripts/core/boxstarter.install.ps1",
                "../../scripts/core/boxstarter.package.ps1",
                "../../scripts/core/pspolicy.cmd"
            ],
            "shutdown_command": "C:\\Windows\\System32\\Sysprep\\sysprep.exe /generalize /oobe /unattend:A:\\Autounattend.xml /quiet /shutdown",
            "shutdown_timeout": "1h",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "4096"],
                ["modifyvm", "{{.Name}}", "--cpus",   "2"],

                ["modifyvm", "{{.Name}}", "--videocapfile", "{{user `build_dir`}}/capture.webm"],
                ["modifyvm", "{{.Name}}", "--videocap",     "on"]
            ],
            "vboxmanage_post": [
                ["modifyvm", "{{.Name}}", "--videocap", "off"]
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "windows_2008_r2_64_{{.Provider}}.box",
            "vagrantfile_template": "../../templates/2008_r2_64/vagrantfile.template"
        }
    ],
    "variables": {
        "build_dir": "{{env `PACKER_BUILD_DIR`}}",
        "guest_os_type": "Windows2008_64",
        "iso_url": "http://download.microsoft.com/download/7/5/E/75EC4E54-5B02-42D6-8879-D8D3A25FBEF7/7601.17514.101119-1850_x64fre_server_eval_en-us-GRMSXEVAL_EN_DVD.iso",
        "iso_checksum": "4263be2cf3c59177c45085c0a7bc6ca5",
        "template": "2008_r2_64"
    }
}
