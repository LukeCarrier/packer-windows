{
    "builders": [
        {
            "vm_name": "{{user `template`}}",
            "type": "virtualbox-iso",
            "headless": true,
            "format": "ova",
            "guest_os_type": "{{user `guest_os_type`}}",
            "boot_wait": "2m",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "md5",
            "guest_additions_mode": "attach",
            "communicator": "winrm",
            "winrm_username": "vagrant",
            "winrm_password": "vagrant",
            "winrm_timeout": "10m",
            "floppy_files": [
                "../../templates/{{user `template`}}/Autounattend.xml",
                "../../scripts/core/pspolicy.bat",
                "../../scripts/core/updates.bat",
                "../../scripts/core/winrm.bat"
            ],
            "shutdown_command": "C:\\Windows\\System32\\Sysprep\\sysprep.exe /generalize /oobe /unattend:A:\\Autounattend.xml /quiet /shutdown",
            "shutdown_timeout": "1h",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "2048"],
                ["modifyvm", "{{.Name}}", "--cpus",   "2"]
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "windows_2012_r2_64_{{.Provider}}.box",
            "vagrantfile_template": "../../templates/2012_r2_64/vagrantfile.template"
        }
    ],
    "variables": {
        "guest_os_type": "Windows2012_64",
        "iso_url": "http://download.microsoft.com/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "iso_checksum": "458ff91f8abc21b75cb544744bf92e6a",
        "template": "2012_r2_64"
    }
}
